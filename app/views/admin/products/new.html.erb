<div class="col-md-4 col-md-offset-4">
    <h2>新增商品</h2>

    <hr>
    <%= simple_form_for [:admin, @product] do |f| %>


    <%= f.input  :title %>
    <br>

    <br>
    <%= f.input  :description %>
    <br>

    <br>
    <%= f.input  :quantity %>
    <br>

    <br>
    <%= f.input  :price%>
    <br>

    <%= f.submit "Create", :disable_with => 'Submiting...' %>
    <% end %>

</div>
